#aliases for efficiency
alias ins="sudo apt install -y"
alias rem="sudo apt purge -y"
alias fix="sudo apt install -f"
alias ls='ls --color=always'
alias la='ls -A'
alias l='ls -CF'
alias ll="clear && ls --color=always -rthla"
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias diff='diff --color=auto'
alias ip='ip --color=auto'
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"
alias j="jobs"
alias follow="tail -f -n +1"
alias nmapc="nmap -sC -sV -f"
alias tools="cd /opt/tools && ll"
alias lazyrecon="/opt/tools/lazyrecon/lazyrecon.sh -d"
alias xsstrike="python /opt/tools/XSStrike/xsstrike.py"
alias locky="python /opt/tools/locky.py"
alias pentestlabs="cat /opt/labs.txt | xargs -I {} /usr/bin/zsh -c 'sudo docker pull {} 2> /dev/null'"
alias pentestlab="/opt/tools/pentestlab/pentestlab.sh"
alias zoom="zoom </dev/null &>/dev/null &"
alias xclip="xclip -selection clipboard"
alias code="code --user-data-dir=$HOME/.vscode-root"
